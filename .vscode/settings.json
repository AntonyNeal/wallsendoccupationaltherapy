  "github.copilot.chat.mcp.servers": {
    "digitalocean": {
      "command": "node",
      "args": ["c:\\Users\\julia\\sw_website\\mcp-server\\index.js"],
      "env": {
        "DO_API_TOKEN": "${env:DO_API_TOKEN}"
      }
    }
  }
